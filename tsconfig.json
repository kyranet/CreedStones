{
	"compileOnSave": true,
	"compilerOptions": {
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"lib": ["esnext", "dom"],
		"module": "commonjs",
		"noUnusedParameters": true,
		"outDir": "./dist",
		"sourceMap": true,
        "declaration": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "target": "es2016"
	},
	"exclude": [
		"node_modules",
		"bin",
		"examples",
		"scripts"
	],
	"include": [
		"./src/**/*"
	]
}
